<!--base-ui/nav-bar/index.wxml-->
<view class="nav">
  <view style="height: {{statusBarHeight}}px"></view>
  <view class="nav-bar">
    <view class="left" bindtap="handleLeftClick">
      <view class="left-slot">
        <slot name="left"></slot>
      </view>
      <image class="icon" src="/assets/images/icons/arrow-left.png" mode="aspectFill"></image>
    </view>
    <view class="center">
      <view class="center-slot">
        <slot name="title"></slot>
      </view>
      <view class="center-title">{{title}}</view>
    </view>
  </view>
</view>