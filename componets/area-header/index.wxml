<view class="header">
  <view class="title">
    {{title}}
  </view>
  <view class="right" wx:if="{{showRight}}">
    <view class="slot">
      <slot></slot>
    </view>
    <view class="default">
      <view>{{rightText}}</view>
      <image class="image" bindtap="handleRightClick" src="/assets/images/icons/arrow-right.png"></image>
    </view>
  </view>
</view>