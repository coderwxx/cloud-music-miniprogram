.ranking{
  display: flex;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.rankingInfo{
  flex: 7;
  background-color: rgb(238, 238, 238);
}
.ranking-name{
  font-size: 34rpx;
  padding: 26rpx 0 10rpx 26rpx;
  color: rgb(31, 0, 53);
}
.songList{
  font-size: 24rpx;
  color: rgb(51, 51, 51);
  line-height: 40rpx;
  padding-left: 26rpx;
}
.artist{
  color: rgb(158, 158, 158);
}

.coverImg{
  flex: 3;
  position: relative;
}
.playcount{
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 22rpx;
  color: #fff;
  padding: 6rpx;
  border-radius: 10rpx;
  background-color: rgba(0,0,0,.5);
}