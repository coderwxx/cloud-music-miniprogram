<view class="item" bindtap="handleSongItemClick">
  <image class="song-image" mode="widthFix" src="{{item.al.picUrl}}">

  </image>
  <view class="info">
    <view class="name">{{item.name}}</view>
    <view class="album-info">
      {{item.ar[0].name}} . {{item.al.name}}
    </view>
  </view>
  <image class="arrow-right" src="/assets/images/icons/arrow-right.png"></image>
</view>