/* componets/song-menu-area/index.wxss */
.scroll-area{
  white-space: nowrap;
}
.item{
  width: 200rpx;
  display: inline-block;
  border-radius: 20rpx;
  overflow: hidden;
  margin-right: 10rpx;
}
.item:last-child{
  margin-right: 0;
}
.hotsongs-image{
  width: 100%;
  position: relative;
}

.top .play-count{
  position: absolute;
  bottom: 0;
  right: 0;
  color: #fff;
  font-size: 24rpx;
  background-color: rgba(0, 0,0, .5);
  border-radius: 10rpx;
  padding: 6rpx 10rpx;
}
.item .bottom {
  width: 100%;
  font-size: 26rpx;

  /* 显示两行 */
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
}
