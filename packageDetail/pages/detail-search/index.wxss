/* pages/detail-search/index.wxss */
page{
  padding: 0 10rpx;
  box-sizing: border-box;
  padding-top: 56px;
}
.van-search{
 padding: 10px 0 !important;
 background-color: #f7f7f7 !important;
}
.search{
  position: fixed;
  top: 0;
  left: 20rpx;
  right: 20rpx;
}
.van-search__content {
  background-color: #fff !important;
}
.tag{
  background-color: #fff;
  font-size: 27rpx;
  margin: 10rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  display: inline-block;
  border: 10rpx solid #fff;
}
.tag:first-child{
  color: #26ce8a;
}
.search-item{
  color: #26ce8a;
  font-size: 34rpx;
  font-weight: 700;
  padding: 10rpx 0 20rpx 20rpx;
}
.suggest-item{
  font-size: 26rpx;
}
.icon{
  width: 70rpx;
  height: 70rpx;
  text-align: center;
}

.rich-text{
  display: inline-block !important;
  position: relative;
  top: -20rpx;
}
.title{
  font-size: 32rpx;
  color: #26ce8a;
}