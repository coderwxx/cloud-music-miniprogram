/* pages/music-player/index.wxss */
page {
  color: #fff;
  padding: 0 60rpx;
  box-sizing: border-box;
}

.bg-image,
.bg-cover {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: -1;
}

.bg-cover {
  background-color: rgba(0, 0, 0, .5);
  backdrop-filter: blur(30px);
}

.tag {
  font-size: 28rpx;
  color: #ccc;
  display: flex;
}

.devider {
  padding: 0 10rpx;
}

.active {
  color: #fff;
}

.music .name {
  font-size: 48rpx;
  font-weight: 700;
  margin: 10rpx 0 10rpx 0;
}

.music .info {
  font-size: 28rpx;
  color: #ccc;
  line-height: 50rpx;
}
.album {
  padding-bottom: 30rpx;
}

.slider {
  margin: 0 18rpx 20rpx ;
}

.time {
  display: flex;
  font-size: 24rpx;
  justify-content: space-between;
  color: #ccc;
}

.operation {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.operation .btn {
  width: 60rpx;
}

.play-order {
  width: 80rpx;
}

.play-pause {
  width: 130rpx;
}

.music {
  display: flex;
  flex-direction: column;
}

.song-lyric {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image {
  flex: 4;
  border-radius: 20rpx;
  width: 100%;
  height: 100%;
}
/* 歌词 */
.lyric-list{
  height: 100vh;
}
.lyric-list .item{
  font-size: 28rpx;
  color: #ccc;
  line-height: 35px;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

 ::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.lyric-list .item.active {
  color: #26ce8a;
  font-size: 36rpx;
}

.song-lyric{
  color: #26ce8a;
  font-size: 30rpx;
}